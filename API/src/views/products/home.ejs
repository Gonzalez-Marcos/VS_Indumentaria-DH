    <body>
        <%- include('../partials/header') %>
            </header>

        <!-- slide -->
        <%- include('../partials/carousel') %> 
        </header>
        <!-- // slide -->

        <!-- img publicidad -->
        <section>
            <img class="banner_publicidad" src="/images/banner-ofertas.jpg">
        </section>

        <!-- card products -->
        <h3>Ultimos ingresos de Temporada</h3>
        <section class="main-section">
            <div class="product-container"><!-- blue -->
                <div class="products"><!-- green -->
                    <% products.forEach(product => {%>
                        <% if (product.category.name == 'new') { %> 
                            <div class="product-under"><!-- pink -->
                                <figure class="product-image"><!-- red -->
                                    <% if (product.images[0]) { %>
                                        <img src="/images/products/<%= product.images[0].name %>"/>
                                    <% } %>
                                    <div class="product-over"><!-- black -->
                                        <button class="btn btn-small addToCart" data-product-id="3">
                                            <i class="fas fa-cart-plus"></i>Agregar
                                        </button>
                                        <a href="/products/<%= product.id %> " class="btn btn-small">Detalles</a>
                                    </div>
                                </figure>
                                <div class="product-summary"><!-- yellow -->
                                    <h4 class="productName"><%= product.name %></h4>
                                    <p style="color: #000;"><%= product.description %></p>
                                    <h6 class="price">
                                        $<span class="priceValue"> <%= product.price %></span>
                                    </h6> 
                                </div>
                            </div>
                        <% } %> 
                    <% }); %>
                </div>
            </div>
        </section>

