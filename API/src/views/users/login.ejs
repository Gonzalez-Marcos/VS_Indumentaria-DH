<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/estiloslogin.css">
    <link rel="stylesheet" href="/css/loginValidate.css">

    </head>

    <body>
        <%- include('../partials/header') %>
            </header>
            
            <div>
                <ul class="errores"></ul>
            </div>
            <div class="contenedor-formulario contenedor">

                <div class="img-login-messi">
                    <!-- <img src="/images/messi_login.jpg" alt="" class="login-messi"> -->
                </div>
                <form class="formulario" id="formulario_login" method="POST" action="../users/login">
                    <div class="texto-formulario">
                        <h2>Bienvenido</h2>
                        <p>Inicia sesión con tu cuenta!</p>
                    </div>
                    <div class="formulario_grupo" id="grupo_email">
                        <div class="formulario_grupo-input">
                            <label class="label_incorrecto" for="email">Usuario</label>
                            <input class="input-0 formulario_input" placeholder="Ingresa tu email" type="text"
                                id="email" name="email"
                                class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>"
                                value="<%= locals.oldData ? oldData.email : null %>">
                            <i class="formulario_validacionEstado fas fa-times-circle"></i>
                        </div>
                        <p class="formulario_inputError">(*) Debe ingresar un email válido</p>
                    </div>
                    <% if (locals.errors && errors.email) { %>
                        <div class="text-danger" id="passwordError" style="color: red">
                            <%= errors.email.msg %>
                        </div>
                        <% } %>
                    
                    <div class="formulario_grupo" id="grupo_password">
                        <div class="formulario_grupo-input" id="eye-up">
                            <label class="label_incorrecto" for="contraseña">Contraseña</label>
                            <span class="icon-eye"><i class="icon-eye2 fas fa-eye-slash" onclick=""></i></span>
                            <input class="input-0 formulario_input" placeholder="Ingresa tu contraseña" type="password" id="password"
                                name="password"
                                class="form-control <%= locals.errors && errors.password? 'is-invalid' : null %>">
                        </div>
                        <p class="formulario_inputError">(*) Error de validación</p>
                    </div>
                    <% if (locals.errors && errors.password) { %>
                        <div class="text-danger" id="passwordError" style="color: red">
                            <%= errors.password.msg %>
                        </div>
                        <% } %>
                        <div class="formulario_mensaje" id="formulario_mensaje">
                            <p><i class="fas fa-exclamation-triangle"></i> <b>Error:</b> Email o contraseña inválida</p>
                        </div>
                            <div class="line-div">
                            </div>
                            <div class="contraseña-olvidada">
                                <a href="./pass">¿Olvidaste tu contraseña?</a><br><br>
                                <a href="./register">¿Tenes cuenta?</a>
                            </div>
                            <div class="input">
                                <input type="submit" href="http://localhost:3000" value="Entrar" name="entrar">

                            </div>
                            <div class="recordar-contraseña">
                                <input class="check-psw" name="remember_user" type="checkbox"><a href="#">Recordarme</a>
                            </div>
                        </form>
                        <script src="/js/loginValidate.js"></script>
                        <script src="/js/mostrarPassword.js"></script>
                        <script src="/JS/script.js"></script>
                        <script src="/JS/shopping-cart.js"></script>

            </div>

            <%- include('../partials/footer') %>

    </body>